<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.firegnu.torquewrenchdemo.ScanChassisActivity"
    android:theme="@android:style/Theme.WithActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <Button
                android:id="@+id/firststepbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描底盘VIN码"
                android:layout_gravity="center">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---->"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/sencondstepbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描零件号"
                android:layout_gravity="center">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---->"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/thirdstepbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测紧固扭矩"
                android:layout_gravity="center">
            </Button>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>
        <!--first-->
        <LinearLayout
            android:id="@+id/firststeplayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底盘VIN码"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/black">
            </TextView>
            <EditText
                android:id="@+id/firstscanresulttextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="18"/>
            <Button
                android:id="@+id/firstscanbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描"
                android:layout_gravity="center">
            </Button>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询结果 "
                android:layout_gravity="center"
                android:layout_weight="2"
                android:textColor="@android:color/black">
            </TextView>
            <EditText
                android:id="@+id/firstresultsuccesful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="32"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
                android:id="@+id/scanresult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属车型 "
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:textColor="@android:color/black">
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="32"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检测工段 "
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:textColor="@android:color/black">
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="32"
                        />
                </LinearLayout>
                <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                <LinearLayout
                    android:id="@+id/firstchildlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <!--sencond-->
        <LinearLayout
            android:id="@+id/sencondsteplayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零件号      "
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@android:color/black">
                </TextView>
                <EditText
                    android:id="@+id/sencondscanresulttextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="18"/>
                <Button
                    android:id="@+id/sencondscanbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描"
                    android:layout_gravity="center">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询结果 "
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textColor="@android:color/black">
                </TextView>
                <EditText
                    android:id="@+id/sencondResultSuccessful"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="32"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:id="@+id/sencondscanresult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ScrollView android:id="@+id/sencond_login_form" android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="零件名称 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工位数目 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="螺栓类型 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工艺标准 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="控制范围 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="极限范围 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工艺说明 "
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:textColor="@android:color/black">
                            </TextView>
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="32"
                                android:inputType="textMultiLine"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <!--third-->
        <LinearLayout
            android:id="@+id/thirdsteplayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
           <ScrollView android:id="@+id/third_login_form" android:layout_width="match_parent"
                    android:layout_height="match_parent">
               <LinearLayout
                   android:id="@+id/thirdchildlayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
               </LinearLayout>
           </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
